<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
    <property name="hibernate.connection.driver_class">org.h2.Driver</property>
    <property name="hibernate.connection.url">jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1</property>
    <property name="hibernate.connection.username">sa</property>
    <property name="hibernate.connection.password"></property>
    <property name="hibernate.hbm2ddl.auto">create-drop</property>
    <property name="hibernate.show_sql">false</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.archive.autodetection">class,hbm</property>
  <!-- Mapeos: explicit mapping de las entidades para asegurar que Hibernate las registre en el ClassLoader de pruebas -->
  <mapping class="ar.ugd.colonia.model.Usuario"/>
  <mapping class="ar.ugd.colonia.model.Voluntario"/>
  <mapping class="ar.ugd.colonia.model.FamiliaAdoptante"/>
  <mapping class="ar.ugd.colonia.model.Veterinario"/>
  <mapping class="ar.ugd.colonia.model.Administrador"/>
  <mapping class="ar.ugd.colonia.model.Gato"/>
  <mapping class="ar.ugd.colonia.model.Tarea"/>
  <mapping class="ar.ugd.colonia.model.Visita"/>
  <mapping class="ar.ugd.colonia.model.RegistroAvistamiento"/>
  <mapping class="ar.ugd.colonia.model.RegistroAdopcionesTransitos"/>
  <mapping class="ar.ugd.colonia.model.Estudio"/>
  <mapping class="ar.ugd.colonia.model.DiagnosticoYTratamiento"/>
  <mapping class="ar.ugd.colonia.model.CertificadoAptitud"/>
  <mapping class="ar.ugd.colonia.model.Reporte"/>
  <mapping class="ar.ugd.colonia.model.ReporteDeGatos"/>
  <mapping class="ar.ugd.colonia.model.ReportePorZona"/>
  </session-factory>
</hibernate-configuration>
